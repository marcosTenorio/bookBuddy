{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "asNeeded",
        "jsxQuoteStyle": "double",
        "quoteStyle": "single",
        "semicolons": "asNeeded",
        "trailingCommas": "es5"
      }
    },
    "json": {
      "formatter": {
        "enabled": true
      },
      "parser": {
        "allowTrailingCommas": true,
        "allowComments": true
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "a11y": {
          "noSvgWithoutTitle": "off"
        },
        "suspicious": {
          "noArrayIndexKey": "info"
        }
      }
    },
    "files": {
      "ignore": ["node_modules"]
    }
  }
